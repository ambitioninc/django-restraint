[run]
branch = True
omit =
    restraint/migrations/*
    restraint/south_migrations/*
    restraint/tests/*
    restraint/version.py
    restraint/apps.py
source = restraint
[report]
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain if tests don't hit defensive assertion code:
    raise NotImplementedError
fail_under = 100
show_missing = 1
